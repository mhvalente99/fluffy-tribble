{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["dev"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach Program",
            "skipFiles": [ "<node_internals>/**" ],
            "outFiles": [ "${workspaceFolder}/**/*.js" ]
        }
    ]
}